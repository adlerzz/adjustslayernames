{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "nodenext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}